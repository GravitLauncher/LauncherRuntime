<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- DrLeonardo refactor -->

<Pane fx:id="notificationPane" prefHeight="85.0" prefWidth="320.0" styleClass="blocks" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">

   <!-- Отступы-->
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>

   <!-- Картинка уведомления-->
   <ImageView fitHeight="63.0" fitWidth="66.0" layoutX="11.0" layoutY="11.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../images/preloader/logo.png" />
      </image>
   </ImageView>

   <!-- Текст уведомления-->
   <Text id="notificationHeading" fontSmoothingType="LCD" layoutX="78.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-font-head" text="%runtime.scenes.components.notification.notificationHeading" wrappingWidth="219.7" />
   <Text id="notificationText" fontSmoothingType="LCD" layoutX="78.0" layoutY="56.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-font-desc" text="%runtime.scenes.components.notification.notificationText" textAlignment="JUSTIFY" wrappingWidth="219.7" />

   <!-- Подключение стилей-->
   <stylesheets>
      <URL value="@components.css" />
      <URL value="@../styles/global.css" />
      <URL value="@../styles/variables.css" />
   </stylesheets>

</Pane>
